                    <form class="newsletter p_relative mt-3">
                        <input type="text" placeholder="آدرس ایمیل">
                        <button class="submit_btn" type="submit"><i class="fab fa-telegram-plane"></i></button>
                    </form>
                    <ul class="fo_social mt-3 float-right">
                        <li class="round-btn btn-whatsapp">
                            <span>شبکه های اجتماعی :</span>

                        </li>
                        <li class="round-btn btn-whatsapp">
                            <a href="#"><i class="fab fa-whatsapp m-1 fa-2x" aria-hidden="true"></i></a>

                        </li>
                        <li class="round-btn btn-telegram">
                            <a href="#"><i class="fab fa-telegram-plane  m-1 fa-2x" aria-hidden="true"></i></a>
                        </li>
                        <li class="round-btn btn-instagram">
                            <a href="#"><i class="fab fa-instagram m-1 fa-2x" aria-hidden="true"></i></a>
                        </li>
                        <li class="round-btn btn-facebook">
                            <a href="#"><i class="fab fa-facebook-f m-1 fa-2x"></i></a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
