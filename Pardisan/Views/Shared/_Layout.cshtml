                                <li> <a asp-controller="Home" asp-action="Achievement">دستاوردها</a> </li>
                                <li> <a asp-controller="Home" asp-action="Certificate">گواهینامه ها</a> </li>
                                <li> <a asp-controller="Home" asp-action="OurTeam">تیم ما</a> </li>
                                <li><a asp-controller="Home" asp-action="Services">خدمات ما</a></li>
                                <li><a asp-controller="Home" asp-action="AboutUs">درباره ما</a></li>
                                <li><a asp-controller="Home" asp-action="ContactUs">تماس باما</a></li>

                            </ul>
                        </div>
                        <div class="m_search pt-md-1">
                            <i class="fal fa-search"></i>

                        </div>
                        <div class="is-show mobile-nav-button">
                            <img src="~/img/niknet-white.png" style="max-width: 15vw;" />
                            <a id="of-trigger" class="icon-wrap pr-3" href="#"> <i class="fal fa-bars"></i></a>
                        </div>

                        <form class="search_wrap mt-lg-0" id="ajax-form-search" method="get" action="">

                            <input type="text" id="search-form-text" class="search-field" value="" name="s" placeholder="کلید واژه مورد نظر ...">
                            <button><i class="fal fa-search"></i></button>

                            <input type="hidden" name="post_type" value="product">
                            <div id="ajax-search-result"></div>
                        </form>
                    </div>
                </div>
            </div>
        </header>

        <div class="clearfix"></div>

        <div>
            @RenderBody()
        </div>

        @*<div class="container">
                <main role="main" class="pb-3">
                </main>
            </div>*@
    </div>

    <footer class="mt-5 pt-5 pb-2">
        <div class="container py-4">
            <div class="row">
                <div class="col-xl-4 col-md-6 mb-3">
